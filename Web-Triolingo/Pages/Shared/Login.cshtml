<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#login">Login</button>

<div class="offcanvas offcanvas-bottom" id="login">
    <div class="offcanvas-header">
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        <button type="button" class="btn btn-outline-primary" asp-page="Settings/SettingList">Đăng kí</button>
    </div>
    <div class="offcanvas-body">
        <form class="formLogin" method="post" >
            <h3 class="title">Đăng nhập</h3>
            <div class="form-group">
                <input class="form-control login-input" placeholder="Nhập Email" />
            </div>
            <div class="form-group">
                <input class="form-control login-input" placeholder="Mật khẩu" />
            </div>
            <button class="btn btn-primary" id="loginbtn" onclick="test()" type="submit">Đăng nhập</button>
        </form>
    </div>
</div>
